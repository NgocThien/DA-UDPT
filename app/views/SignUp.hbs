
    <!--Table-->
    <div class="jumbotron">

      <!--Hình lớn-->
      <div class="container">
       <div class="row">
        <div class="col-md-5">
          <legend><h3 class = "text-left" style="color:#000080"><strong>Đăng kí</strong></h3></legend>

          {{# if RegisterAlert}}
          <div class="alert alert-danger">{{RegisterAlert}}</div
            {{/if}}

            <form action="/SignUp" class="form-horizontal" method="POST" role="form">
              <div class = "form-group"  style="font-size: 15px;color:   #FFFF00;background: #000080">
                <label for="">Họ tên</label>
                <div>
                  <input class ="form-control" type="text" placeholder="Nhập vào họ tên..." tabindex="1" name ="txtName">
                </div>
              </div>

              <div class = "form-group"  style="font-size: 15px;color:   #FFFF00;background: #000080">
                <label for="">Tên đăng nhập</label>
                <div>
                  <input class ="form-control" type="text" placeholder="Nhập vào họ tên..." tabindex="2" name ="txtUser">
                </div>
              </div>

              <div class = "form-group" style="font-size: 15px;color:   #FFFF00;background: #000080">
                <label for="">Email</label>
                <div>
                  <input class ="form-control" type="text" placeholder="Email..." tabindex="3" name = "txtEmail">
                </div>
              </div>
              </div>

               <div class="col-md-5"></br></br></br></br>
              <div class = "form-group" style="font-size: 15px;color:   #FFFF00;background: #000080">
                <label for="">Mật khẩu</label>
                <div>
                  <input class ="form-control" type="password" placeholder="Nhập password" tabindex="4" name ="txtPass">
                </div>
              </div>

              <div class = "form-group" style="font-size: 15px;color: #FFFF00;background: #000080">
                <label for="">Nhập lại mật khẩu</label>
                <div>
                  <input class ="form-control" type="password" placeholder="Nhập lại mật khẩu..." tabindex="5" name ="txtConfirmPass">
                </div>
              </div>

              <button type="submit" class="btn btn-danger" tabindex="5">Đăng kí</button>
            </br>
          </br>
        </form>
      </div>
    </div>
  </div>
</div>

